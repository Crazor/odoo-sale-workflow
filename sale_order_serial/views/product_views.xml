<odoo>

    <record
        id="sale_order_serials_product_attribute_view_form_inherit"
        model="ir.ui.view"
    >
        <field name="name">sale.order.serials.product.attribute.form.inherit</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='value_ids']/tree/field[@name='name']"
                position="after"
            >
                <field
                    name="serial_sequence_id"
                    domain="[('product_serial_ok', '=', True)]"
                    context="{'default_product_serial_ok': True}"
                />
            </xpath>
        </field>
    </record>

    <record
        id="sale_order_serials_product_template_only_form_view_inherit"
        model="ir.ui.view"
    >
        <field
            name="name"
        >sale.order.serials.product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tracking']" position="after">
                <field
                    name="serial_sequence_id"
                    attrs="{'invisible': [('tracking', '!=', 'serial')]}"
                    domain="[('product_serial_ok', '=', True)]"
                    context="{'default_product_serial_ok': True}"
                />
            </xpath>
        </field>
    </record>

</odoo>
