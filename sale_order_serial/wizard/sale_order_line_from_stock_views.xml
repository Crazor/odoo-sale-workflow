<odoo>

    <record id="view_sale_order_line_from_stock_form_view" model="ir.ui.view">
        <field name="name">sale.order.line.from_stock.form</field>
        <field name="model">sale.order.line.from_stock</field>
        <field name="arch" type="xml">
            <form string="Add from Stock">
                <group>
                     <group colspan="4">
                         <field name="sale_id" invisible="1" />
                         <field name="product_tmpl_id" />
                         <field name="value_ids" widget="many2many_tags" />
                         <field name="serial_list" />
                         <field name="list_limit" />
                     </group>
                     <group colspan="4">
                         <field
                            name="quant_ids"
                            widget="2many_list"
                            nolabel="1"
                            readonly="0"
                        />
                     </group>
                </group>
                <footer>
                    <button string="Add" class="btn-primary" type="object" name="add" />
                </footer>
           </form>
        </field>
    </record>

    <record id="action_sale_line_from_stock" model="ir.actions.act_window">
        <field name="name">Add from Stock</field>
        <field name="res_model">sale.order.line.from_stock</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sale_order_line_from_stock_form_view" />
        <field name="target">new</field>
    </record>

    <record id="view_order_form_inherit_from_stock" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.from_stock</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="after">
                <button
                    string="Add from Stock"
                    type="action"
                    name="%(sale_order_serial.action_sale_line_from_stock)d"
                    context="{'default_sale_id': id}"
                    attrs="{'invisible': [('state', 'in', ('sale', 'done', 'cancel'))]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
