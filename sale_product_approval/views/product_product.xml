<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <page name="inventory" position="after">
                <page
                    groups="sale_product_approval.group_product_administrator"
                    name="states"
                    string="State Configuration"
                >
                    <group string="Sales">
                        <field name="candidate_sale" />
                    </group>
                </page>
            </page>
        </field>
    </record>
    <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product_product_form_view_inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <page name="inventory" position="after">
                <page
                    groups="sale_product_approval.group_product_administrator"
                    name="states"
                    string="State Configuration"
                >
                    <group string="Sales">
                        <field name="candidate_sale" />
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
