<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <page name="inventory" position="after">
                <page
                    groups="sale_product_approval.group_product_administrator, base.group_no_one"
                    name="states"
                    string="State Configuration"
                >
                    <group name="candidate_fields">
                        <group string="Sales">
                            <field name="can_edit_candidate" invisible="1" />
                            <field name="candidate_sale" attrs="{'readonly': [('can_edit_candidate', '=', False)]}" />
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
